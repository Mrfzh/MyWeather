<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/color_blue">

    <TextView
        android:id="@+id/tv_weather_widget_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35"
        android:textSize="48sp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:textColor="@color/color_white"
        android:typeface="monospace"/>

    <TextView
        android:id="@+id/tv_weather_widget_temperature_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_weather_widget_temperature"
        android:text="℃"
        android:textColor="@color/color_white"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_weather_widget_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广州"
        android:layout_toRightOf="@id/tv_weather_widget_temperature_text"
        android:textColor="@color/color_white"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/iv_weather_widget_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/weather_0"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="15dp"/>

</RelativeLayout>